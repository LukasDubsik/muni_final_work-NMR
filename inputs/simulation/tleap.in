#Input params
source leaprc.gaff2
source leaprc.water.opc

#Load ligand parameters
loadamberparams {name}.frcmod
SYS = loadmol2 {name}_charges_fixed.mol2
check SYS

#Solvate the system
solvatebox SYS OPCBOX 10.0 #10 angsterm
addIons SYS Na+ 0

#Export and close
saveamberparm SYS {name}.parm7 {name}.rst7
savepdb SYS sys_leap.pdb
quit
