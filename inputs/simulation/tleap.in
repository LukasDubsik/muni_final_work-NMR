#Input params
source leaprc.gaff
source /software/ncbr/softrepo/lcc/amber/24.0/m64-ub22/para/dat/leap/cmd/leaprc.water.tip3p

#Load ligand parameters
loadamberparams ${name}.frcmod
SYS = loadmol2 ${name}_charges_fix.mol2
check SYS

#Solvate the system
solvatebox SYS TIP3PBOX 20.0 #20 angsterm
addIonsRand SYS Na+ 0

#Export and close
saveamberparm SYS ${name}.parm7 ${name}.rst7
savepdb SYS sys_leap.pdb
quit
